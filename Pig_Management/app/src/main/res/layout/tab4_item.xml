<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/itemlich"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/border_item"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtLichOchuong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ô chuồng"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/foodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Cám con cò" />

        </LinearLayout>

        <TextView
            android:id="@+id/soluongTab34"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="0" />

        <TextView
            android:id="@+id/donviTab34"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="Xi lanh"/>

        <CheckBox
            android:id="@+id/cbxDone"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:buttonTint="#B71C1C"
            android:checked="false"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="18dp" />
    </LinearLayout>


</LinearLayout>